<?xml version="1.0" encoding="utf-8" ?>
<AbsoluteLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GalaxyLogicGame.Events.BlindnessEvent"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All"
                x:Name="mainLayout">
    <AbsoluteLayout x:Name="darken" AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All"
                    BackgroundColor="#66000000" Opacity="0"/>
    <Image x:Name="eventIcon" AbsoluteLayout.LayoutBounds="0.5, 0.5, 60, 60" AbsoluteLayout.LayoutFlags="PositionProportional" Opacity="0" TranslationY="-60"
           Source="blindnessIcon.png"/>
    <Label x:Name="eventTitle" AbsoluteLayout.LayoutBounds="0.5, 0.5, 200, 30" AbsoluteLayout.LayoutFlags="PositionProportional" Opacity="0"
           Text="Blindness" TextColor="White" FontAttributes="Bold" FontSize="24" HorizontalTextAlignment="Center"/>

    <AbsoluteLayout x:Name="blindness" Opacity="0" AbsoluteLayout.LayoutBounds="0.5, 0.5, 360, 360" AbsoluteLayout.LayoutFlags="PositionProportional">
        <Image Source="blindness.png"/>
        <AbsoluteLayout x:Name="blindPlanets" AbsoluteLayout.LayoutBounds="0.5, 0.5, 360, 360" AbsoluteLayout.LayoutFlags="PositionProportional">
            
        </AbsoluteLayout>
    </AbsoluteLayout>

</AbsoluteLayout>