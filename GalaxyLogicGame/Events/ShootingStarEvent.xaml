<?xml version="1.0" encoding="utf-8" ?>
<AbsoluteLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GalaxyLogicGame.Events.ShootingStarEvent"
                x:Name="mainLayout" AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All">
    <AbsoluteLayout x:Name="darken" AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All"
                   BackgroundColor="#66000000"
                   Opacity="0"/>
    <AbsoluteLayout x:Name="choiceLayout" AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All"
                   BackgroundColor="#33000000"
                   Opacity="0">
        <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 360, 360" AbsoluteLayout.LayoutFlags="PositionProportional">
            <Label Text="Choose one" TextColor="White" FontAttributes="Bold" x:Name="chooseOneLabel" FontSize="25" HorizontalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5, 0.25, 300, 30" AbsoluteLayout.LayoutFlags="PositionProportional"/>
        </AbsoluteLayout>

    </AbsoluteLayout>



    <Image x:Name="eventIcon" AbsoluteLayout.LayoutBounds="0.5, 0.5, 60, 60" AbsoluteLayout.LayoutFlags="PositionProportional" Opacity="0" TranslationY="-60"
           Source="shootingstar.png"/>
    <Label x:Name="eventTitle" AbsoluteLayout.LayoutBounds="0.5, 0.5, 300, 30" AbsoluteLayout.LayoutFlags="PositionProportional" Opacity="0"
           Text="Shooting star" TextColor="Yellow" FontAttributes="Bold" FontSize="24" HorizontalTextAlignment="Center"/>

    <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 360, 360" AbsoluteLayout.LayoutFlags="PositionProportional"
                        x:Name="buttonsLayout" IsVisible="false">

    </AbsoluteLayout>

    <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All"
                    x:Name="protectiveLayout" IsVisible="false"/>
</AbsoluteLayout>