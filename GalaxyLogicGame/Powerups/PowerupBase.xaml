<?xml version="1.0" encoding="utf-8" ?>
<AbsoluteLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GalaxyLogicGame.Powerups.PowerupBase"
               AbsoluteLayout.LayoutBounds="0.5, 0.5, 180, 180" AbsoluteLayout.LayoutFlags="PositionProportional">
    <BoxView AbsoluteLayout.LayoutBounds="5, 5, 170, 170" 
             BackgroundColor="#2f2f2f" CornerRadius="30"/>
    <BoxView AbsoluteLayout.LayoutBounds="5, 5, 170, 170" 
             x:Name="filledBG" CornerRadius="31"/>
    <Image AbsoluteLayout.LayoutBounds="0, 0, 180, 180" Source="powerupsBGWhite.png" Opacity="0.5"/>

    <Image x:Name="icon" AbsoluteLayout.LayoutBounds="0, 0, 180, 180"/>
    <Button AbsoluteLayout.LayoutBounds="0, 0, 180, 180" 
              BackgroundColor="#bb000000"
             x:Name="allowed" CornerRadius="30" IsVisible="true" />
    <BoxView  AbsoluteLayout.LayoutBounds="0, 0, 180, 180" x:Name="protectiveLayer" IsVisible="true"/>




    <AbsoluteLayout.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnUsePowerupClicked"/>
    </AbsoluteLayout.GestureRecognizers>
</AbsoluteLayout>