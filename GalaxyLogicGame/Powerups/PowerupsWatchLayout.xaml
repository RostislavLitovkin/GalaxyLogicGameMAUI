<?xml version="1.0" encoding="utf-8" ?>
<AbsoluteLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GalaxyLogicGame.Powerups.PowerupsWatchLayout"
             xmlns:powerups="clr-namespace:GalaxyLogicGame.Powerups"
             AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All"
             BackgroundColor="#88000000" Opacity="0">

    <AbsoluteLayout.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnHideClicked" />
    </AbsoluteLayout.GestureRecognizers>

    <powerups:PowerupsLayout x:Name="powerupsLayout" />

    <BoxView AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="SizeProportional" IsVisible="False"
             x:Name="protectiveLayout" />
</AbsoluteLayout>
